
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all content
    match /{document=**} {
      allow read: if true;
      // Write access is open for site management by Creative Landscaping Solutions.
      // To lock down writes, replace this with Firebase Authentication-based rules.
      allow write: if true;
    }
  }
}
